generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id Int @id @default(autoincrement())
  title String
  description String?
  pageSections PageSection[]
}

model PageSection {
  id Int @id @default(autoincrement())

  page Page @relation(fields: [pageId], references: [id])
  pageId Int

  heading String
  content String
}